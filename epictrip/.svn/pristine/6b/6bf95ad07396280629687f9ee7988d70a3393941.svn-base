<script type="text/javascript">

// 서울,중국... 처음위치 표기하기


$(document).ready(function() {
	
    var memoData = [];

    $(".dayOne").dblclick(function() {
    	memoData = [];
        $(this).find(".schMemo").each(function() {
            var idx = $(this).find("#idx").val();
            var name = $(this).find("#name").val();
            var lat = parseInt($(this).find("#latInfo").val());
            var lng = parseInt($(this).find("#lngInfo").val());

            memoData.push({
            	label: idx,
            	name: name,
            	lat: lat,
            	lng: lng
            });
        });
        initMap(memoData)
        console.log(memoData);
    });


});


	function initMap(info) {
	
		
	    var latLng = new google.maps.LatLng(36.204824, 138.252924);
	
	    const map = new google.maps.Map(document.querySelector(".schMap"), {
	        center: latLng,
	        zoom: 5,
	        disableDefaultUI: true,
	    });
	
/* 	   
		서울 : 37.5518911		126.9917937
	    일본 : 36.204824		138.252924
	    중국 : 35.86166		104.195397
	    홍콩 : 104.195397		114.1693611
	    배트남 : 14.058324	108.277199 
*/
	    
	    // ---------- marker 표시 ------------
	    info.forEach(({ label, name, lat, lng }) => {
	        const marker = new google.maps.Marker({
	            position: { lat, lng },
	            label,
	            map,
	        });
	    }) 
	    
	    // ---------- 선 표시 ------------
	  const flightPath = new google.maps.Polyline({
	    path: info,
	    geodesic: true,
	    strokeColor: "#FF0000",
	    strokeOpacity: 1.0,
	    strokeWeight: 2,
	  });

  	flightPath.setMap(map);
	
	
	window.initMap = initMap;
	};
	
	

</script>

