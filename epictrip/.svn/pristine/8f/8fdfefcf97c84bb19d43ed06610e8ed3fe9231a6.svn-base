package com.web.epictrip.controller;

import org.apache.http.HttpEntity;
import org.apache.http.HttpResponse;
import org.apache.http.client.methods.HttpPost;
import org.apache.http.entity.StringEntity;
import org.apache.http.impl.client.CloseableHttpClient;
import org.apache.http.impl.client.HttpClients;
import org.apache.http.util.EntityUtils;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class ChatAPIController {
	@Value("${openai.api.key}")
	private String API_KEY;

    private static final String API_URL = "https://api.openai.com/v1/engines/davinci/completions";

    @PostMapping("/ask")
    public ResponseEntity<String> askGPT(@RequestBody String question) {
        try (CloseableHttpClient client = HttpClients.createDefault()) {
            HttpPost post = new HttpPost(API_URL);
            post.setHeader("Authorization", "Bearer " + API_KEY);
            post.setHeader("Content-Type", "application/json");
            post.setEntity(new StringEntity("{ \"prompt\": \"" + question + "\", \"max_tokens\": 150 }"));

            HttpResponse response = client.execute(post);
            HttpEntity entity = response.getEntity();
            String responseBody = EntityUtils.toString(entity);

            // 여기서 응답 JSON에서 필요한 부분을 추출할 수 있습니다.
            return ResponseEntity.ok(responseBody);
        } catch (Exception e) {
            e.printStackTrace();
            return ResponseEntity.status(HttpStatus.INTERNAL_SERVER_ERROR).body("Error occurred");
        }
    }
}

